{
  "compilerOptions": {
    "target": "ES2024",
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@template/*": ["src/template/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@config/*": ["src/config/*"],
      "@data/*": ["src/data/*"],
      "@middleware/*": ["src/middleware]/*"],
    },
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./dist"
  }
}
